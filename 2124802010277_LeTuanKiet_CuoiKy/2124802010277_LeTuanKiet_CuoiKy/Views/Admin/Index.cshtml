@section Script{
    <script>
        const ctx = document.getElementById('myChart');
        var labels = @Html.Raw(Json.Encode(ViewBag.ChartMonth));
        var data = @Html.Raw(Json.Encode(ViewBag.DtChartMonth));
        console.log(data);

        new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [{
                    label: '# Số lượng kỳ thi',
                    data: data,
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
