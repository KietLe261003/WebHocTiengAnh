
@{
    ViewBag.Title = "AddGrammar";
}
<div class="ContrainerAddGrammar"
     style="
        padding: 50px 30px 50px 30px;
    ">
    <form method="post">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">Tên ngữ pháp</label>
            <input name="TenNguPhap" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Nhập tên loại kiến thức bạn muốn chia sẻ">
